{% extends "_base.html.jinja2" %}
{% block body %}
    <div class="container mx-auto">
    <div>
        <h2>Projects</h2>
    </div>
    <div class="w-50">
        <table class='table'>
        {% for project in projects %}
            <tr>
                <td class="align-middle">
                    <a class="" href="{{ url_for('project_detail', id=project.id) }}">{{ project.name }}</a>
                </td>
                <td>
                    <form action="{{ url_for('project_delete', id=project.id) }}" method="POST">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>
    <form class="form" method="POST" action="{{ url_for('new_project') }}">
        <label>
            <input class="form-control" type="text" name="name" required placeholder="Project Name">
        </label>
        <button type="submit" class="btn btn-primary">Add Project</button>
    </form>
    </div>
{% endblock %}